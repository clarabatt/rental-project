<div class="card house_card">
    <div class="card_options">
        <a href="rentals/edit/{{_id}}"><i alt="Edit" data-toggle="tooltip" data-placement="top" title="Edit this rental"
                style="color: #25252b" class="bi bi-pencil-fill"></i></a>
        <a id="rentalDelete" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal"><i alt="Delete"
                data-toggle="tooltip" data-placement="top" title="Delete this rental" style="color: #25252b"
                class="bi bi-trash-fill"></i></a>
    </div>
    <img class="card-img-top" src={{imageUrl}} alt="{{{picture.site}}} by {{{picture.author}}}: {{picture.url}}" />
    <div class="card-body">
        <span>
            <h4>{{headline}} - {{city}}</h4>
        </span>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <span>
                    {{numSleeps}}
                    <i alt="people" data-toggle="tooltip" data-placement="top" title="People" style="color: #25252b"
                        class="bi bi-people-fill"></i>
                </span>
                <span>
                    {{numBedrooms}}
                    <i alt="bed" data-toggle="tooltip" data-placement="top" title="Bedrooms" style="color: #25252b"
                        class="bi bi-usb-mini-fill"></i>
                </span>
                <span>
                    {{numBathrooms}}
                    <i alt="bathroom" data-toggle="tooltip" data-placement="top" title="Bathrooms"
                        style="color: #25252b" class="bi bi-badge-wc-fill"></i>
                </span>
            </li>
        </ul>
    </div>
    <div class="card-footer d-flex flex-row-reverse justify-content-between">
        <h5>${{pricePerNight}}</h5>
        <small class="text-muted">per night</small>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form method="post" class="modal-content" action="delete/{{_id}}">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Rental Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this rental?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>