<section class="login">
    <div class="card">
        <form method="post" action="/login">
            <h1>Welcome Back!</h1>
            <div class="mb-3">
                <label for="staticEmail" class="form-label">Email</label>
                <input type="text" class="form-control {{#if validationMsg.email}}is-invalid{{/if}}" id="email"
                    name="email" value="{{values.email}}" placeholder="
                    name@example.com">
                <div class="invalid-feedback">
                    {{validationMsg.email}}
                </div>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" class="form-control {{#if validationMsg.password}}is-invalid{{/if}}"
                    id="password" name="password" value="{{values.password}}">
                <div class="invalid-feedback">
                    {{validationMsg.password}}
                </div>
            </div>
            <div class="buttons d-flex flex-row justify-content-evenly">
                <a href="/" class="btn btn-secondary" role="button">Back to Home</a>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</section>