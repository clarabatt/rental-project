<section class="login">
    <div class="card">
        <form method="post" action="/sign-up">
            <h1>Sign up</h1>
            <p>Create your account to rent a house with us!</p>
            <div class="mb-3">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control {{#if validationMsg.firstname}}is-invalid{{/if}}"
                    value="{{values.firstname}}" name="firstname">
                <div class="invalid-feedback">
                    {{validationMsg.firstname}}
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control {{#if validationMsg.lastname}}is-invalid{{/if}}"
                    value="{{values.lastname}}" name="lastname">
                <div class="invalid-feedback">
                    {{validationMsg.lastname}}
                </div>
            </div>
            <div class="mb-3">
                <label for="staticEmail" class="form-label">Email</label>
                <input type="text" class="form-control {{#if validationMsg.email}}is-invalid{{/if}}" name="email"
                    value="{{values.email}}" placeholder="name@example.com">
                <div class="invalid-feedback">
                    {{validationMsg.email}}
                </div>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" class="form-control {{#if validationMsg.password}}is-invalid{{/if}}"
                    value="{{values.password}}" name="password">
                <div class="invalid-feedback">
                    {{validationMsg.password}}
                </div>
            </div>
            <div class="mb-3">
                <label for="inputPassword"
                    class="form-label {{#if validationMsg.passwordConfirm}}is-invalid{{/if}}">Confirm Password</label>
                <input type="password" class="form-control" value="{{values.passwordConfirm}}" name="passwordConfirm">
                <div class="invalid-feedback">
                    {{validationMsg.passwordConfirm}}
                </div>
            </div>
            <div class="buttons d-flex flex-row justify-content-evenly">
                <a href="/" class="btn btn-secondary" role="button">Back to Home</a>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
</section>